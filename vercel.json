{
  "version": 2,
  "builds": [
    {
      "src": "quote-widget/api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "quote-widget/public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/(.*)$",
      "headers": {
        "Content-Security-Policy": "frame-ancestors 'self' https://*.notion.so https://*.notion.site"
      },
      "continue": true
    },
    { "src": "^/api/get-quote/?$", "dest": "/quote-widget/api/get-quote.js" },
    { "src": "^/$", "dest": "/quote-widget/public/index.html" },
    { "src": "^(.*)$", "dest": "/quote-widget/public$1" }
  ]
}